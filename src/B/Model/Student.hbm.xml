<?xml version="1.0" encoding="gb2312"?>  
    <!-- 指定Hiberante3映射文件的DTD信息 -->  
<!DOCTYPE hibernate-mapping PUBLIC   
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">  
    <!-- hibernate-mapping是映射文件的根元素 --> 
<hibernate-mapping package="B.Model">
	<!--每个class元素对应一个持久化对象 -->
	<class name="Student" table="students_table">
		<!-- id元素定义持久化类的标识属性 -->
		<id name = "id" type="java.lang.String" column="id" length="9"></id>
		
		<!-- 定义常规属性 -->
		<property name="name" column="name" type="java.lang.String"  length="10"/> 
        <property name="gender" column="gender" type="java.lang.String" length="2"/> 
        <property name="major" column="major" type="java.lang.String" length="16"/>
        <property name="password" column="password" type="java.lang.String" length="6"/>
		
		<one-to-one name="user" class="User" cascade="all" property-ref="object"></one-to-one>
	
		<set name="students_courses" >
			<key column="student_id"/>
			<one-to-many class="B.Model.StudentCourse"/>
		</set>
	</class>
</hibernate-mapping>